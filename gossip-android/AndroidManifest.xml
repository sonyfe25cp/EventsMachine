<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gossip.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".GossipWelcomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GossipHelperActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="gossip.helper" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GossipMainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="gossip.main" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GossipEventDetailActivity"
            android:label="@string/app_name" 
             android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="gossip.main.event.detail" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GossipNewsActivity"
            android:label="@string/app_name"
             android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="gossip.main.event.news" />
            </intent-filter>
        </activity>
    </application>
</manifest>